{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FunctionSchema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the function or tool"
    },
    "description": {
      "type": "string",
      "description": "A description of the function or tool"
    },
    "parameters": {
      "type": "array",
      "description": "A list of parameters for the function or tool",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the parameter"
          },
          "type": {
            "type": "string",
            "description": "The type of the parameter (e.g., int, list, string, etc.)"
          },
          "description": {
            "type": "string",
            "description": "A description of the parameter"
          }
        },
        "required": ["name", "type", "description"]
      }
    }
  },
  "required": ["name", "description"]
}
